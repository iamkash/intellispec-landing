# Next.js Environment Variables
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-sanity-api-token

# Sanity Webhook for Content Revalidation (Optional)
# Generate this in Sanity Studio > API > Webhooks
SANITY_WEBHOOK_SECRET=your-sanity-webhook-secret

# Optional: For content updates (write access)
# SANITY_WRITE_TOKEN=your-sanity-write-token

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_GTM_ID=your_google_tag_manager_id

# Contact Form (Optional - for form submission)
CONTACT_FORM_WEBHOOK_URL=your_webhook_url

# Social Media (Optional)
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/intellispec
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/intellispec
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/intellispec

# Company Information
NEXT_PUBLIC_COMPANY_EMAIL=info@intellispec.com
NEXT_PUBLIC_COMPANY_PHONE=+1 (555) 123-4567
NEXT_PUBLIC_COMPANY_ADDRESS=Houston, TX

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_CASE_STUDIES=true
NEXT_PUBLIC_ENABLE_ROI_CALCULATOR=true 